<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="283dp"
    android:background="@android:color/white"
    android:paddingTop="21dp"
    android:paddingBottom="21dp">

    <ImageButton
        android:id="@+id/button_pizza"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/press_menu_background"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/select_menu_pizza"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_hamburger"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/press_menu_background"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/select_menu_hamburger"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintLeft_toRightOf="@id/button_pizza"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_chicken"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/press_menu_background"
        android:layout_marginBottom="16dp"
        android:src="@drawable/select_menu_chicken"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_hamburger"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_chinese"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/press_menu_background"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/select_menu_chinese"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <ImageButton
        android:id="@+id/button_korean"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/press_menu_background"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/select_menu_korean"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintLeft_toRightOf="@id/button_chinese"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <ImageButton
        android:id="@+id/button_snackbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/press_menu_background"
        android:layout_marginBottom="16dp"
        android:src="@drawable/select_menu_snackbar"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_korean"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <ImageButton
        android:id="@+id/button_porkfeet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/press_menu_background"
        android:layout_marginRight="8dp"
        android:src="@drawable/select_menu_porkfeet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <ImageButton
        android:id="@+id/button_japanese"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/press_menu_background"
        android:layout_marginRight="8dp"
        android:src="@drawable/select_menu_japanese"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintLeft_toRightOf="@id/button_porkfeet"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <ImageButton
        android:id="@+id/button_etc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/press_menu_background"
        android:src="@drawable/select_menu_etc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_japanese"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />


</android.support.constraint.ConstraintLayout>